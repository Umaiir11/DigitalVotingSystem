}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <!-- Bootstrap 5 CDN Link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS Link -->
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="~/css/OTPstyle.css" asp-append-version="true" />
    <!-- Include Firebase SDK scripts -->
    <script src="https://www.gstatic.com/firebasejs/8.9.1/firebase.js"></script>

    <!-- Your custom JavaScript code that uses Firebase -->
    <script src="/js/OTPVerification.js"></script>





     <script type="module">
        // Initialize Firebase
const firebaseConfig = {
    apiKey: "AIzaSyDuZWP76P8ac8dRkO1Pcp1jNmyk41UN1nQ",
    authDomain: "verifyotp-83a1b.firebaseapp.com",
    projectId: "verifyotp-83a1b",
    storageBucket: "verifyotp-83a1b.appspot.com",
    messagingSenderId: "872984157025",

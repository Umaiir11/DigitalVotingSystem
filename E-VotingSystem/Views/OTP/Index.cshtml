    </script>

</head>
<body>
    <section class="wrapper">
        <div class="container">
            <div class="col-sm-8 offset-sm-2 col-lg-6 offset-lg-3 col-xl-6 offset-xl-3 text-center">
                <div class="logo">
                    @if (!string.IsNullOrEmpty(@Model.ImageLocation))
                    {

                        <img src="~/images/@Model.ImageLocation" alt="Image Description" class="circular-image">

                    }

                    else
                    {
                        <img src="https://as1.ftcdn.net/v2/jpg/02/42/45/90/1000_F_242459076_53ffNaKxcGS1ioScWiSt50e9ltwvynqt.jpg" alt="Default Image" class="circular-image">
                    }
                </div>
                <form class="rounded bg-white shadow p-5">
                    <h3 class="text-dark fw-bolder fs-4 mb-4">Two Step Verification</h3>

                    <div class="form-group text-muted mb-4">
                        <label for="verification-code">Enter the verification code we sent to:</label>
                        <input type="text" id="number" class="form-control placeholder-input" placeholder="@Model.Mobile" value="@Model.Mobile">
                       

                        <div id="recaptcha-container" class="d-flex justify-content-center align-items-center mt-4"></div>


                        <button type="button" onclick="phoneAuth()" class="btn btn-primary submit_btn my-4">Send OTP</button>
                    </div>

                    <div class="otp_input text-start mb-4">
                        <label for="digit">Type your 6 digit security code</label>
                        <div class="d-flex align-items-center justify-content-between mt-2">
                            <input type="text" class="form-control1" placeholder="" maxlength="1">
                            <input type="text" class="form-control2" placeholder="" maxlength="1">
                            <input type="text" class="form-control3" placeholder="" maxlength="1">
                            <input type="text" class="form-control4" placeholder="" maxlength="1">
                            <input type="text" class="form-control5" placeholder="" maxlength="1">   
                            <input type="text" class="form-control6" placeholder="" maxlength="1">
                        </div>
                    </div>
                    <button type="button" onclick="verifyOTP()" class="btn btn-primary submit_btn my-4">Verify</button>

                   

                    <div class="fw-normal text-muted mb-2">
                        Didn't get the code? <a href="#" class="text-primary fw-bold text-decoration-none">Resend</a>
                    </div>
                </form>
            </div>
        </div>
    </section>

 
</body>
</html>
